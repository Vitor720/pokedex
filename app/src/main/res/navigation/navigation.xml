<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ddapps.pokedex.ui.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_pokemonDisplayFragment"
            app:destination="@id/pokemonDisplayFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDisplayFragment"
        android:name="com.ddapps.pokedex.ui.PokemonDisplayFragment"
        android:label="Pokemon Stats"
        tools:layout="@layout/pokemon_display_fragment" >
        <action
            android:id="@+id/action_pokemonDisplayFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>